<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05010A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:text="Macro Editor"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/macroName"
            android:hint="Macro Name"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"/>

        <EditText
            android:id="@+id/macroSteps"
            android:hint="Steps (one per line)"
            android:minLines="6"
            android:gravity="top"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"/>

        <Button
            android:id="@+id/btnSave"
            android:text="Save Macro"/>

        <Button
            android:id="@+id/btnRun"
            android:text="Run Macro"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnExport"
            android:text="Export Macros"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnImport"
            android:text="Import Macros"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/status"
            android:textColor="#AAAAAA"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</ScrollView>
