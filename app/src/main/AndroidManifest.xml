<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sitara.ai">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:label="Sitara AI"
        android:theme="@style/AppTheme">

        <activity
            android:name=".AuthActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"/>
        <activity android:name=".MacroEditorActivity"/>

        <!-- âœ… FIXED Accessibility Service -->
        <service
            android:name="com.sitara.ai.automation.JarvisAccessibility"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">

            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService"/>
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_config"/>
        </service>

        <service
            android:name="com.sitara.ai.service.WakeWordService"
            android:exported="false"/>

    </application>

</manifest>
